<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fullscreen Celebration Overlay -->
        <FrameLayout
            android:id="@+id/celebrationOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:clickable="true"
            android:elevation="100dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/celebrationAnimation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:lottie_autoPlay="false"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/celebrationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="450dp"
                android:text="ðŸŽ‰ Milestone Achieved! ðŸŽ‰"
                android:textColor="@color/gold"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pink_gradient_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <!-- Latest User ID Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    android:background="@drawable/white_card_gold_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LATEST USER ID"
                            android:textColor="@color/gold"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.15"
                            android:fontFamily="serif"
                            android:shadowColor="#000000"
                            android:shadowDx="1.5"
                            android:shadowDy="1.5"
                            android:shadowRadius="1" />

                        <TextView
                            android:id="@+id/seriesIdText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="MH26000001"
                            android:textColor="@color/pink_dark"
                            android:textSize="38sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:letterSpacing="0.0"
                            android:maxLines="1"
                            android:gravity="center"
                            android:ellipsize="none"
                            android:includeFontPadding="false"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stats Cards Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginBottom="24dp">

                    <!-- Total Registrations -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="@color/gold"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />

                            <TextView
                                android:id="@+id/totalRegsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/pink_dark"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.5"
                                android:shadowRadius="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrations"
                                android:textColor="@color/gold"
                                android:textSize="12sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Today -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today"
                                android:textColor="@color/gold"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />

                            <TextView
                                android:id="@+id/todayRegsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/pink_dark"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.5"
                                android:shadowRadius="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrations"
                                android:textColor="@color/gold"
                                android:textSize="12sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- This Month -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Month"
                                android:textColor="@color/gold"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />

                            <TextView
                                android:id="@+id/monthRegsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/pink_dark"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.5"
                                android:shadowRadius="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrations"
                                android:textColor="@color/gold"
                                android:textSize="12sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Money -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Money"
                                android:textColor="@color/gold"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="0.5" />

                            <TextView
                                android:id="@+id/totalMoneyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹0"
                                android:textColor="@color/pink_dark"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.5"
                                android:shadowRadius="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <!-- Hidden Registration Form Elements -->
                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/phoneInput"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/amountInput"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/gold" />

            </LinearLayout>
        </ScrollView>

        <!-- LIST Button - positioned above flower -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp">
            
            <Button
                android:id="@+id/listButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ LIST"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/pink_gradient_bg"
                android:letterSpacing="0.1"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2" />
        </androidx.cardview.widget.CardView>

        <!-- Flower decoration - bottom right corner -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:src="@drawable/flower" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>